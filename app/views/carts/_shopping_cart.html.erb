<div class="special">
  <div class="container"> 
        <h3>Votre Panier</h3>
<% if !@order_item.nil? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if @order_items.size == 0 %>

<div style="text-align:center;margin-top:10px;">
   Aucun produit dans votre panier <%= link_to "Retourner en arriere", root_path %> et ajouter en dans votre panier.
  </div>
<% else %>
<div style="text-align:center;margin-top:10px;">
  <% @order_items.each do |order_item| %>
    <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
  <% end %>
<% end %>

</div>

   <div class="clearfix"> </div>

    </div>
  </div>
<% if  number_to_currency current_order.subtotal  > 0  %> 
  <div style="text-align:right">
                <a href="/cart/payment"class ="btn btn-success" > PAYER  <%= number_to_currency current_order.subtotal%></a></div><br>
                <% end %>