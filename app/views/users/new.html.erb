<div class="login">
  <div class="container">
    <div class="form_signup">
<% if current_user.nil? %>
    <h1>Sign up</h1>
<%= form_for(@user) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
     <%= f.label :last_name %>
    <%= f.text_field :last_name  %>
    <%= f.label :username %>
    <%= f.text_field :username %>
     <%= f.label :email %>
    <%= f.text_field :email %>
     <%= f.label :password %>
    <%= f.password_field :password %>
  <%= f.submit "Creer un compte", class: "btn btn-success" %>
 <% end %>
<% else %>
  Vous êtes déja connecté 
<% end %>

    </div>
  </div>
</div>