<%= form_for @product, :html => { :multipart => true } do |f| %>
    <%= f.label :label%>
    <%= f.text_field :label %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :special_price %>
    <%= f.text_field :special_price %>
    <%= f.label :stock %> <br>
    <%= f.number_field :stock  %> <br>
    <%= f.label :image %> <br>
    <%= f.file_field :image %>
    <br>
  <%= f.submit "SUBMIT", :class => "btn btn-success" %>
 <% end %>

